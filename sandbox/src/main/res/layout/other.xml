<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/PalaceInvertedBackgroundColor"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            style="@style/Palace.Legacy.LinearProgressIndicator.Inverted"
            android:id="@+id/progressBar0"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:progress="50" />

        <ProgressBar
            style="@style/Palace.Legacy.LinearProgressIndicator.Inverted"
            android:id="@+id/progressBar1"
            android:indeterminate="true"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <ProgressBar
            style="@style/Palace.Legacy.CircularProgressIndicator.Inverted"
            android:id="@+id/progressBar2"
            android:layout_width="64dp"
            android:layout_height="64dp" />

    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="256dp"
        android:layout_height="32dp"
        android:text="Switch" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch2"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="SwitchMaterial" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch3"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="SwitchCompat" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="CheckBox" />

    <SeekBar
        android:id="@+id/seekBar"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="256dp"
        android:layout_height="32dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Legacy" />

            <TextView
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Material" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:indeterminate="true" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:indeterminate="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:layout_weight="1" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:indeterminate="true" />

        </TableRow>
    </TableLayout>

</LinearLayout>
