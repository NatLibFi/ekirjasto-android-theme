<?xml version="1.0" encoding="UTF-8" ?>

<!--
    This file maps Palace palette values to meaningful color values.
-->

<resources>
    <color name="PalaceDialogBackgroundColor">@color/EkirjastoWhite</color>
    <color name="PalaceError">@color/PalaceRed2</color>
    <color name="PalaceMenuBackgroundColor">@color/EkirjastoLightestGreen</color>
    <color name="PalacePrimaryForegroundColor">@color/EkirjastoGreen</color>
    <color name="PalaceScreenBackgroundColor">@color/EkirjastoWhite</color>
    <color name="PalaceInvertedBackgroundColor">@color/EkirjastoBlack</color>

    <!-- Contained buttons. -->
    <color name="PalaceButtonContainedBackgroundColor">@color/EkirjastoLightGreen</color>
    <color name="PalaceButtonContainedDisabledBackgroundColor">@color/EkirjastoLightestGreen</color>
    <color name="PalaceButtonContainedDisabledTextColor">@color/EkirjastoGrey</color>
    <color name="PalaceButtonContainedTextColor">@color/EkirjastoBlack</color>

    <!-- Outline buttons. -->
    <color name="PalaceButtonOutlinedBackgroundColor">@color/EkirjastoWhite</color>
    <color name="PalaceButtonOutlinedDisabledBackgroundColor">@color/EkirjastoLightGrey</color>
    <color name="PalaceButtonOutlinedDisabledTextColor">@color/EkirjastoGrey</color>
    <color name="PalaceButtonOutlinedTextColor">@color/EkirjastoBlack</color>
    <color name="PalaceButtonOutlinedOutlineColor">@color/EkirjastoGreen</color>

    <!-- Text buttons. -->
    <color name="PalaceButtonTextBackgroundColor">@color/EkirjastoWhite</color>
    <color name="PalaceButtonTextDisabledBackgroundColor">@color/EkirjastoWhite</color>
    <color name="PalaceButtonTextDisabledTextColor">@color/EkirjastoGrey</color>
    <color name="PalaceButtonTextTextColor">@color/EkirjastoBlack</color>

    <!-- Status bar. -->
    <color name="PalaceStatusBarColor">@color/EkirjastoLightGreen</color>

    <!-- Switches -->
    <color name="PalaceSwitchThumbColorChecked">@color/EkirjastoBlack</color>
    <color name="PalaceSwitchThumbColorUnchecked">@color/EkirjastoGrey</color>
    <color name="PalaceSwitchTrackColorChecked">@color/EkirjastoGreen</color>
    <color name="PalaceSwitchTrackColorUnchecked">@color/EkirjastoLightestGreen</color>

    <!-- Text -->
    <color name="PalaceTextColor">@color/EkirjastoBlack</color>
    <color name="PalaceTextHintColor">@color/EkirjastoLightGrey</color>
    <color name="PalaceTextInvertedColor">@color/EkirjastoWhite</color>

    <!-- Dividers -->
    <color name="PalaceDividerColor">@color/EkirjastoLightestGreen</color>
</resources>
