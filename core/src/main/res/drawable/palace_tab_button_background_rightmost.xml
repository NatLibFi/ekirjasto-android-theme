<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:radius="@dimen/PalaceTabButtonCornerRadius" android:topLeftRadius="0dp" />
            <solid android:color="@color/EkirjastoTabButtonBackgroundColor" />
        </shape>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/ekirjasto_tab_rectangle_right" />
            <item android:drawable="@drawable/ekirjasto_tab_rounded" />
        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:radius="@dimen/PalaceTabButtonCornerRadius" android:topLeftRadius="0dp" />
            <solid android:color="@color/EkirjastoTabButtonBackgroundColor" />
        </shape>
    </item>

</selector>