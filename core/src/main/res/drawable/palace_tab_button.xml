<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/EkirjastoTabButtonBackgroundColor" />
        </shape>
    </item>

    <item android:state_checked="true">
        <inset android:insetLeft="@dimen/PalaceTabButtonStrokeInset" android:insetTop="0dp" android:insetRight="@dimen/PalaceTabButtonStrokeInset" android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="16dp" />
                <solid android:color="@color/PalaceScreenBackgroundColor" />
            </shape>
        </inset>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/EkirjastoTabButtonBackgroundColor" />
        </shape>
    </item>

</selector>